.section.hero
  padding: 120px 0
  margin-top: 70px
  position: relative
  overflow: hidden
  @media breakpoints.lap.breakpoint
    padding: 100px 0
  @media breakpoints.palm.breakpoint
    padding: 60px 0 65px
    margin-top: 0
  .container
    text-align: center

.hero--home
  background : linear-gradient(0deg, rgba(53, 41, 84, 1) 0%, rgba(71, 55, 102, 1) 12.78%, rgba(84, 65, 115, 1) 26.62%, rgba(88, 68, 119, 1) 40%, rgba(98, 68, 137, 1) 100%);

.mainTagline
  @extend h1
  color: #FFFFFF
  max-width: 1100px
  margin: 0 auto
  margin-bottom: 58px
  z-index: 1
  @media breakpoints.lap.breakpoint
    margin-bottom: 46px
  @media breakpoints.palm.breakpoint
    margin-bottom: 34px
  span
    position: relative
    z-index: 1
    &:after
      content: ""
      position: absolute
      width: 100%
      bottom: 5px
      left: 0
      z-index: -1
      border-bottom: 8px solid rgba(131,212,214,0.5)
    @media breakpoints.lap.breakpoint
      &:after
        border-bottom: 6px solid rgba(131,212,214,0.5)
        bottom: 4px
    @media breakpoints.palm.breakpoint
      &:after
        border-bottom: 4px solid rgba(131,212,214,0.5)
        bottom: 3px

.subTagline
  @extend h5
  color: violet
  margin: 0 auto
  margin-bottom: 50px
  max-width: 770px
  @media breakpoints.lap.breakpoint
    margin-bottom: 50px
  @media breakpoints.palm.breakpoint
    margin-bottom: 40px
  span
    font-weight: 700

.welcome
  position: absolute
  right: -50px
  bottom: 100px
  z-index: 0
  img
    max-height: 200px
    width: auto
  @media (min-width: 1024px) and (max-width: 1200px)
    bottom: 30px
    img
      max-height: 160px
  @media breakpoints.portable.breakpoint
    display: none

.wow
  visibility: hidden
